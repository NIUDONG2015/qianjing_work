<?xml version="1.0" encoding="utf-8"?>
<!-- 设置 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layoutMain" >
	<include layout="@layout/include_title" />
    <ScrollView style="@style/scroll" >

        <LinearLayout style="@style/linear" >

           

            <LinearLayout
                style="@style/linear"
                android:background="@drawable/white" >

                <View style="@style/viewLine" />
				
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dip"
                    android:background="@drawable/layout_main" />

                 <Button 
                    android:id="@+id/rl_passwordset"
                    android:layout_height="45dp"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:text="@string/str_resetloginpass_text"
                    android:textColor="@drawable/gray_text"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="0dp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dip"
                    android:background="@drawable/layout_main"
                    android:visibility="visible" />


                <RelativeLayout
                    android:id="@+id/rl_lockset"
                    style="@style/tableRow"
                    android:visibility="visible">
                    <TextView
                        style="@style/textNormal"
                        android:text="@string/str_resetlockpwdtext" />
                    
                    
                    <CheckBox
                    android:id="@+id/ju_e_check_box"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/redeem_check_box_bg"
                    android:button="@null" />
                    
                    
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dip"
                    android:background="@drawable/layout_main"
                    android:visibility="visible" />
                
                <RelativeLayout
                    android:id="@+id/rl_modify_pwd"
                    style="@style/tableRow"
                    android:visibility="visible">
                    
                    <TextView
                        style="@style/textNormal"
                        android:text="@string/str_modifylockpwdtext" />
                    
                    <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/img_right_arrow2"
                    android:button="@null"/>
                    
                    
                </RelativeLayout>

                
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
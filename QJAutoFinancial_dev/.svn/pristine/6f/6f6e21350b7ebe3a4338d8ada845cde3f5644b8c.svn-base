<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    
    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            
            <TextView
                android:id="@+id/tv_history_item1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="5"
            	android:textSize="@dimen/text_common1"
        		android:textColor="@color/text_common2"
                android:text=""/>
            
            <TextView
                android:id="@+id/tv_history_item2" 
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="3"
            	android:textSize="@dimen/text_common1"
        		android:textColor="@color/text_common2"
                android:text=""/>
            
            <TextView
                android:id="@+id/tv_history_item3"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="right"
            	android:textSize="@dimen/text_common1"
        		android:textColor="@color/text_common2"
                android:text=""/>
            
        </LinearLayout>
        
        <TextView
            android:id="@+id/tv_history_reason"
            android:layout_height="35dp"
            android:layout_width="match_parent"
            android:background="@drawable/bg_failed_reason"
            android:paddingRight="0dp"
            android:paddingLeft="12dp"
            android:paddingTop="6dp"
            android:gravity="center_vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:clickable="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:visibility="gone"
            android:textColor="#9f880e"
            />

</LinearLayout>

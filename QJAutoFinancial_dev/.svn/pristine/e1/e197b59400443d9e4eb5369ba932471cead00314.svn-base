<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_info_title"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="8月11日收市点日"
            android:textColor="@drawable/gray_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_info_time"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="2015-08-11"
            android:textColor="@drawable/gray_text"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_unread"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/balance_purchase"
            android:paddingBottom="10dp"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_info_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:paddingTop="7dip"
        android:text="8月11日收市点日收市点日收市点日收市点日收市点日收市点评"
        android:textColor="@drawable/gray_text"
        android:textSize="15sp" />

</LinearLayout>
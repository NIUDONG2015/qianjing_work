<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0eff5"
    android:orientation="vertical" >

    <include layout="@layout/include_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/blue_light_grey" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/aip_charge_day"
            android:textColor="@color/blue_deep_grey"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/success_charge_money"
            android:textColor="@color/blue_deep_grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/profit_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="@string/aip_buy_statue"
            android:textColor="@color/blue_deep_grey"
            android:textSize="15sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/charge_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@color/color_00000000"
        android:divider="@color/low_stroke"
        android:dividerHeight="0.5dp"
        android:fadeScrollbars="false"
        android:scrollbars="none"
        android:scrollingCache="false" />

</LinearLayout>
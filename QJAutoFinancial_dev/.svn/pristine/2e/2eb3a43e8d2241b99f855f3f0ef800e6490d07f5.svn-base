<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <TextView
        android:id="@+id/fund_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="180dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:textColor="@color/color_6c6c6c"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/fund_redeem_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/color_6c6c6c"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/fund_percent_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/blue_deep"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/fund_name_view"
        android:background="@color/deep_stroke" />

</RelativeLayout>
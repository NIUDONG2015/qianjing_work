<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layoutMain">

    <include layout="@layout/include_title" />
    
    <TextView
        android:id="@+id/tv_rebalance_head"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/grey_deep_txt"
        android:textSize="14sp"
        android:text="@string/balance_list_title"/>

    <com.qianjing.finance.widget.pulltorefresh.PullToRefreshListView
        android:id="@+id/ptrflv_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:scrollbars="none"/>
	
    <include
        android:id="@+id/in_default_page"
        layout="@layout/default_page" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000">
    
    
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:orientation="vertical"
        android:background="@drawable/deal_schema_shape"
        android:layout_centerInParent="true">
    
	    
		        <TextView
		            android:id="@+id/tv_item_1"
		            style="@style/qianJTextView"
			        android:text="修改组合名称"/>
            
        
	    <EditText
	        android:id="@+id/et_item_1"
	        style="@style/qianJEditText"
	        android:textColorHint="#88000000"
	        android:hint="请填写组合名称"/>
	    
			    <TextView
		            android:id="@+id/tv_item_2"
		            style="@style/qianJTextView"
			        android:text="更改方案名称"/>
	    
	    <EditText
	        android:id="@+id/et_item_2"
	        style="@style/qianJEditText"/>
	    
			    <TextView
		            android:id="@+id/tv_item_3"
		            style="@style/qianJTextView"
			        android:text="更改方案名称"/>
	    
	    <EditText
	        android:id="@+id/et_item_3"
	        style="@style/qianJEditText"/>
	    
			    <TextView
		            android:id="@+id/tv_item_4"
		            style="@style/qianJTextView"
			        android:text="更改方案名称"/>
	    
	    <EditText
	        android:id="@+id/et_item_4"
	        style="@style/qianJEditText"/>
        
    	<LinearLayout 
    	    android:layout_height="wrap_content"
    	    android:layout_width="match_parent"
    	    style="@style/baseQianJEditText"
    	    android:layout_marginBottom="10dp"
    	    android:orientation="horizontal">
    	    
    	    <Button
    	        android:id="@+id/btn_cancel"
    	        style="@style/btnShort"
    	        android:background="@drawable/button_enable"
    	        android:layout_width="0dp"
    	        android:layout_weight="1"
    	        android:text="取消"/>
    	    <Button
    	        android:id="@+id/btn_sure"
    	        style="@style/btnShort"
    	        android:layout_width="0dp"
    	        android:layout_weight="1"
    	        android:layout_marginLeft="5dp"
    	        android:text="确定"/>
    	    
    	</LinearLayout>
    
    </LinearLayout>

</RelativeLayout>

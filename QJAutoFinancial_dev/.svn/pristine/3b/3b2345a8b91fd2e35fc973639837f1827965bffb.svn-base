<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layoutMain">
    
    <include 
        layout="@layout/include_title"/>
    
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="@color/white">
        
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        
    	<TextView
        	android:layout_height="wrap_content"
        	android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/color_green_lose"
    		android:text="虚拟申购成功"/>
    
    </LinearLayout>
    
    
    <RelativeLayout 
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:background="@color/white">
        
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:textColor="@color/gray_black"
            android:text="虚拟申购总金额"/>
        
        <TextView
            android:id="@+id/tv_virtual_purchase_total"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/gray_black"
            android:layout_marginRight="30dp"
            android:text="000"/>
        
    </RelativeLayout>
    
    <View 
        style="@style/viewLine"
        android:background="@color/color_grey_middle"
        android:layout_height="0.1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"/>
    
    <RelativeLayout 
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:background="@color/white">
        
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:textColor="@color/gray_black"
            android:text="虚拟申购手续费"/>
        
        <TextView
            android:id="@+id/tv_virtual_purchase_fee"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/gray_black"
            android:layout_marginRight="30dp"
            android:text="000"/>
        
    </RelativeLayout>
    
    <View 
        style="@style/viewLine"
        android:background="@color/color_grey_middle"
        android:layout_height="0.1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"/>
    
    <RelativeLayout 
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:background="@color/white">
        
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:textColor="@color/gray_black"
            android:text="剩余虚拟可投金额"/>
        
        <TextView
            android:id="@+id/tv_virtual_purchase_useable"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/gray_black"
            android:layout_marginRight="30dp"
            android:text="000"/>
        
    </RelativeLayout>
    
    <View 
        android:layout_height="30dp" 
        android:layout_width="match_parent"/>
    
    <Button
        android:id="@+id/btn_result_close"
        style="@style/btnNormal"
        android:text="确定"/>

</LinearLayout>

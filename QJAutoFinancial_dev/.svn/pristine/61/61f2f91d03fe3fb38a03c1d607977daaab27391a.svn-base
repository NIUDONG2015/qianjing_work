<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="6dp"
    android:background="@drawable/quick_buy_bg" >

    <TextView
        android:id="@+id/left_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/icon_jinqu"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/half_year_rate_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/left_bg"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_e41f23"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/precent_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/half_year_rate_view"
        android:layout_toRightOf="@id/half_year_rate_view"
        android:text="@string/str_percent"
        android:textColor="@color/color_e41f23"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/half_year_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/half_year_rate_view"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_999999"
        android:textSize="13sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/half_year_title_view"
        android:layout_marginRight="7dp"
        android:layout_marginTop="20dp"
        android:background="@color/color_c7c7c7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divider"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/min_script_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_929292"
            android:textSize="14sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_c7c7c7" />

        <TextView
            android:id="@+id/fen_xian_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_929292"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>
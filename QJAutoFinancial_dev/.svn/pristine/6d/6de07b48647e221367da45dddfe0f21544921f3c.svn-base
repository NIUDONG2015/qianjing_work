<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="15dp" />

            <gradient
                android:endColor="@color/color_efefef"
                android:startColor="@color/color_efefef" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="15dp" />

                <gradient
                    android:endColor="@color/color_fc8987"
                    android:startColor="@color/color_fc8987" />
            </shape>
        </clip>
    </item>

</layer-list>
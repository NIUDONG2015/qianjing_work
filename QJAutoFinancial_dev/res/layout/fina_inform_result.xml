<?xml version="1.0" encoding="utf-8"?>
<!-- 绑卡 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layoutMain" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:background="@drawable/title_bg" >

        <TextView
            android:id="@+id/title_middle_text"
            android:layout_width="160dp"
            android:layout_height="46dip"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:textColor="@drawable/title_text_color"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_back"
            style="@style/imageNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:background="@drawable/title_left_but"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="3dip"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <!-- 数据类型为1的显示布局 -->

    <LinearLayout
        android:id="@+id/ll_showtype1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dip"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_inforeslt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dip"
            android:textColor="@drawable/gray_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_inforeslt_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dip"
            android:textColor="@drawable/gray_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_inforeslt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dip"
            android:textColor="@drawable/gray_text"
            android:textSize="15sp" />
    </LinearLayout>

    <!-- 数据类型为2的显示布局 -->

    <WebView
        android:id="@+id/wb_showtype2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</LinearLayout>
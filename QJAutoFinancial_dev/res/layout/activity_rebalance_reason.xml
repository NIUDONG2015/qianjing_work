<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    style="@style/layoutMain">
    
    
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:background="@drawable/title_bg" >

        <TextView
            android:id="@+id/title_middle_text"
            android:text="再平衡原因"
            android:layout_width="fill_parent"
            android:layout_height="46dip"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@drawable/title_text_color"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_back"
            android:text="返回"
            style="@style/imageNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:background="@drawable/title_left_but"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="3dip"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        style="@style/linearShape"
        android:minHeight="100dip" 
        android:layout_marginTop="10dip"
        >

        <RelativeLayout style="@style/tableRow" >

            <TextView
                android:id="@+id/tv_rebalance_reason"
                style="@style/textNormal"
                android:lineSpacingMultiplier="1.1"
                android:text="三季度行业投资风云再起，行业类基金有较大提升空间。
积极性组合增加了行业类基金翘楚长盛行业基金和富国医疗基金。稳健型组合增加了易方达中小盘。
预计本组合可有效的降低波动率的同时，增加收益的可能。" />
        </RelativeLayout>
    
    
    </LinearLayout> 
    

</LinearLayout>
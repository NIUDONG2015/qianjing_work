<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_data_item_content"
    android:orientation="vertical"
    style="@style/layoutMain">
    
    <View style="@style/viewLine"
        android:id="@+id/v_top_line"/>

    <LinearLayout
		style="@style/tableRow" 
        android:background="@drawable/white"
        android:orientation="horizontal">
    
    
   	<TextView
        android:id="@+id/tv_handle" 
		android:layout_width="0dip"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:gravity="center"
		android:textColor="#000000"
		android:text="操作"/>
			    
	<TextView
	    android:id="@+id/tv_abbrev"
		android:layout_width="0dip"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:textColor="#000000"
		android:gravity="center"
		android:text="基金"/>
			    
	<TextView
	    android:id="@+id/tv_shares"
		android:layout_width="0dip"
		android:layout_height="fill_parent"
		android:gravity="center"
		android:textColor="#000000"
		android:layout_weight="1"
		android:text="份额/金额"/>
	
    </LinearLayout>
			
    <View style="@style/viewLineMiddle" 
        android:id="@+id/v_middle_line"
        android:visibility="gone"/>
    
	<View style="@style/viewLine" 
	    android:id="@+id/v_bottom_line"/>

</LinearLayout>
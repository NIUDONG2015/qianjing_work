<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layoutMain" >

    <include layout="@layout/include_title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.qianjing.finance.view.custom.VIPFreeScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:background="@color/white" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/white"
                    android:visibility="visible" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/bitmap_dot_line" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/tv_history_value_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="确认金额"
                                android:textColor="#4f5464"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_history_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="--.--"
                                android:textColor="#4f5464"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="手续费"
                                android:textColor="#4f5464"
                                android:textSize="@dimen/text_common1" />

                            <TextView
                                android:id="@+id/tv_history_fee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="--"
                                android:textColor="#4f5464"
                                android:textSize="17sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/bitmap_dot_line" />
                </RelativeLayout>

                <!-- @@@@@@@@@@@@@@@@@@@@@@@分隔线@@@@@@@@@@@@@@@@@@@@@@@ -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#f9fafd" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="组合名称"
                        android:textColor="#4f5464"
                        android:textSize="@dimen/text_common1" />

                    <TextView
                        android:id="@+id/tv_history_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:text="存钱养老组合"
                        android:textColor="#4f5464"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View
                    style="@style/viewLine"
                    android:layout_height="0.1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="8dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="交易类型"
                            android:textColor="@color/text_common1"
                            android:textSize="@dimen/text_common1" />

                        <TextView
                            android:id="@+id/tv_history_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="组合赎回"
                            android:textColor="@color/text_common2"
                            android:textSize="@dimen/text_common1" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="8dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="交易时间"
                            android:textColor="@color/text_common1"
                            android:textSize="@dimen/text_common1" />

                        <TextView
                            android:id="@+id/tv_history_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="2015-05-11 10：23"
                            android:textColor="@color/text_common2"
                            android:textSize="@dimen/text_common1" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="8dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="交易方式"
                            android:textColor="@color/text_common1"
                            android:textSize="@dimen/text_common1" />

                        <TextView
                            android:id="@+id/tv_history_bank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="工商银行(尾号6215)"
                            android:textColor="@color/text_common2"
                            android:textSize="@dimen/text_common1" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="8dp" >

                        <TextView
                            android:id="@+id/tv_history_sure_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="赎回确认"
                            android:textColor="@color/text_common1"
                            android:textSize="@dimen/text_common1" />

                        <TextView
                            android:id="@+id/tv_history_sure_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="--"
                            android:textColor="@color/text_common2"
                            android:textSize="@dimen/text_common1" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_last_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="8dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="到账情况"
                            android:textColor="@color/text_common1"
                            android:textSize="@dimen/text_common1" />

                        <TextView
                            android:id="@+id/tv_history_arrive_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="--"
                            android:textColor="@color/text_common2"
                            android:textSize="@dimen/text_common1" />
                    </RelativeLayout>

                    <View style="@style/viewLine" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="14dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dot_line2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="12dp"
                    android:text="交易明细"
                    android:textColor="@color/text_common2"
                    android:textSize="@dimen/text_common1" />

                <!-- @@@@@@@@@@@@@@@@@@@@@@@分隔线@@@@@@@@@@@@@@@@@@@@@@@ -->

                <LinearLayout
                    android:id="@+id/ll_history_details_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <View style="@style/viewLine" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:text="基金名称"
                            android:textColor="@color/grey_low_txt"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_item2_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="申购金额(份)"
                            android:textColor="@color/grey_low_txt"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_item3_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="right"
                            android:text="确认份额(份)"
                            android:textColor="@color/grey_low_txt"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        style="@style/viewLine"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp" />

                    <View
                        style="@style/viewLine"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="68dp" />
            </LinearLayout>
        </com.qianjing.finance.view.custom.VIPFreeScrollView>

        <!--
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_gravity="bottom"
            android:background="#ccffffff" >

            <View
                style="@style/viewLine"
                android:layout_alignParentTop="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_state_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/history_fail" />

                <TextView
                    android:id="@+id/tv_state_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:text="赎回失败"
                    android:textColor="#ff3b3b"
                    android:textSize="20sp" />
            </LinearLayout>
        </RelativeLayout> -->

        <LinearLayout
            android:id="@+id/ll_mend"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_gravity="bottom"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:visibility="visible" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="68dip"
                android:layout_weight="1"
                android:background="#ccffffff" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="40dip"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_state_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dip"
                        android:background="@drawable/history_fail" />

                    <TextView
                        android:id="@+id/tv_state_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dip"
                        android:text="部分申购中"
                        android:textColor="#ff3b3b"
                        android:textSize="20sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_mend"
                android:layout_width="wrap_content"
                android:layout_height="68dip"
                android:layout_weight="1"
                android:background="@color/red"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/mend"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
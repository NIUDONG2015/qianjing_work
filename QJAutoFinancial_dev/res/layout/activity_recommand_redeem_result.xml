<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_efeff4"
    android:orientation="vertical" >

    <include
        android:id="@+id/title"
        layout="@layout/title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="361dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/first_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_redeem_success" />

        <ImageView
            android:id="@+id/third_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_part"
            android:layout_marginLeft="7dp"
            android:background="@drawable/icon_redeem_finish" />

        <TextView
            android:id="@+id/opreate_title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/first_part"
            android:layout_marginLeft="21dp"
            android:layout_toRightOf="@id/first_part"
            android:text="@string/recommand_redeem_commit"
            android:textColor="@color/grey_deep_txt"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/commit_time_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/opreate_title_view"
            android:layout_below="@id/opreate_title_view"
            android:layout_marginTop="1dp"
            android:textColor="@color/grey_middle_txt"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/bank_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/opreate_title_view"
            android:layout_below="@id/commit_time_view"
            android:layout_marginTop="1dp"
            android:textColor="@color/grey_middle_txt"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/deduct_money_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/opreate_title_view"
            android:layout_below="@id/bank_name_view"
            android:layout_marginTop="2.5dp"
            android:textColor="@color/grey_middle_txt"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/final_time_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/opreate_title_view"
            android:layout_alignTop="@id/third_part"
            android:layout_toRightOf="@id/third_part"
            android:textColor="@color/grey_deep_txt"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/final_time_msg_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/opreate_title_view"
            android:layout_below="@id/final_time_view"
            android:gravity="center_vertical"
            android:textColor="@color/grey_middle_txt"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>
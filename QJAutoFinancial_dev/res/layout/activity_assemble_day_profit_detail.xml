<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0eff5"
    android:orientation="vertical" >

    <include layout="@layout/include_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="bottom" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:paddingBottom="10dp"
            android:text="@string/fund_name"
            android:textColor="@color/grey_middle_txt"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="10dp"
            android:text="@string/day_profit_rate"
            android:textColor="@color/grey_middle_txt"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/profit_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:paddingBottom="10dp"
            android:text="@string/day_profit_text_two"
            android:textColor="@color/grey_middle_txt"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/low_stroke" />

    <ListView
        android:id="@+id/profit_detail_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@color/color_00000000"
        android:divider="@color/low_stroke"
        android:dividerHeight="0.5dp"
        android:fadeScrollbars="false"
        android:scrollbars="none"
        android:scrollingCache="false" />

</LinearLayout>
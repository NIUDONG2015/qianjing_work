<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    
   <LinearLayout 
       android:layout_height="44dp"
       android:layout_width="match_parent"
       android:layout_marginLeft="16dp"
       android:orientation="horizontal">
       
       <ImageView
           android:id="@+id/iv_total_purchase"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:layout_gravity="center_vertical"
           android:src="@drawable/history_purchase"/>
       
       <TextView
           android:id="@+id/tv_total_purchase_t"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="8dp"
           android:textSize="13sp"
           android:textColor="@color/grey_middle_txt"
           android:text="累计申购(元)："/>
       
       <TextView
           android:id="@+id/tv_total_purchase"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:layout_marginLeft="10dp"
           android:textSize="16sp"
           android:textColor="@color/grey_deep_txt"
           android:layout_gravity="center_vertical"
           android:text="--.--"/>
       
   </LinearLayout>
   
   <View 
       android:layout_height="0.1dp"
       android:layout_width="match_parent"
       android:background="@drawable/gray_frame"
       android:layout_marginLeft="40dp"/>
    
      <LinearLayout 
       android:layout_height="44dp"
       android:layout_width="match_parent"
       android:layout_marginLeft="16dp"
       android:orientation="horizontal">
       
       <ImageView 
           android:id="@+id/iv_total_redeem"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:layout_gravity="center_vertical"
           android:src="@drawable/history_redeem"/>
       
       <TextView
           android:id="@+id/tv_total_redeem_t"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="8dp"
           android:textSize="13sp"
           android:textColor="@color/grey_middle_txt"
           android:text="累计赎回(元)："/>
       
       <TextView
           android:id="@+id/tv_total_redeem"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:layout_marginLeft="10dp"
           android:textSize="16sp"
           android:textColor="@color/grey_deep_txt"
           android:layout_gravity="center_vertical"
           android:text="--.--"/>
       
   </LinearLayout>
   
      <View 
       android:layout_height="0.1dp"
       android:layout_width="match_parent"
       android:background="@drawable/gray_frame"
       android:layout_marginLeft="40dp"/>
    
      <LinearLayout
       android:id="@+id/ll_item3"
       android:layout_height="44dp"
       android:layout_width="match_parent"
       android:layout_marginLeft="16dp"
       android:orientation="horizontal">
       
       <ImageView
           android:id="@+id/iv_total_fee"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:layout_gravity="center_vertical"
           android:background="@drawable/history_fee"/>
       
       <TextView
           android:id="@+id/tv_total_fee_t"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="8dp"
           android:textSize="13sp"
           android:textColor="@color/grey_middle_txt"
           android:text="累计手续费(元)："/>
       
       <TextView
           android:id="@+id/tv_total_fee"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:layout_marginLeft="10dp"
           android:textSize="16sp"
           android:textColor="@color/grey_deep_txt"
           android:layout_gravity="center_vertical"
           android:text="--.--"/>
       
   </LinearLayout>

</LinearLayout>

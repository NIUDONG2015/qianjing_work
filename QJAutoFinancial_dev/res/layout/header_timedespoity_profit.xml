<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:textColor="@color/blue_deep_grey"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_below="@id/text"
        android:background="@color/blue_light_grey" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/time_disport_name"
            android:textColor="@color/blue_deep_grey"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/str_totalprofit"
            android:textColor="@color/blue_deep_grey"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/profit_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="@string/time_disport_waiting"
            android:textColor="@color/blue_deep_grey"
            android:textSize="13sp" />
    </RelativeLayout>
</RelativeLayout>
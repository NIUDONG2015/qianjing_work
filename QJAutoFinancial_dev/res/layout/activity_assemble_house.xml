<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main"
    style="@style/layoutMain" >

    <include layout="@layout/include_title" />

    <RelativeLayout style="@style/relative" >

        <TextView
            android:id="@+id/tv_goal"
            style="@style/textNormal"
            android:text="打算几年后购房？" />

        <TextView
            android:id="@+id/et_goal_label"
            style="@style/textNormalRight"
            android:text="年" />
		
        <EditText
            android:id="@+id/et_years"
            style="@style/editRightNumber"
            android:layout_toLeftOf="@id/et_goal_label"
            android:layout_toRightOf="@id/tv_goal"
            />
        
    </RelativeLayout>

    <RelativeLayout style="@style/relative" >

        <TextView
            android:id="@+id/tv_money"
            style="@style/textNormal"
            android:text="预计需要多少钱？" />

        <TextView
            android:id="@+id/et_money_label"
            style="@style/textNormalRight"
            android:text="元" />

        <EditText
            android:id="@+id/et_money"
            style="@style/editRightDemical"
            android:layout_toLeftOf="@id/et_money_label"
            android:layout_toRightOf="@id/tv_money"
            />
    </RelativeLayout>

    <RelativeLayout style="@style/relative" >

        <TextView
            android:id="@+id/tv_current"
            style="@style/textNormal"
            android:text="当前我可以拿出多少钱？" />

        <TextView
            android:id="@+id/et_current_label"
            style="@style/textNormalRight"
            android:text="元" />

        <EditText
            android:id="@+id/et_current"
            style="@style/editRightDemical"
            android:layout_toLeftOf="@id/et_current_label"
            android:layout_toRightOf="@id/tv_current"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_submit"
        style="@style/btnNormal"
        android:text="@string/BTN_SUBMIT" />

</LinearLayout>
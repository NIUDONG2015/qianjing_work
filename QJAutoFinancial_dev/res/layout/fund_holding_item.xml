<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">
<LinearLayout
    style="@style/layoutMain">
    
    <LinearLayout
        android:id="@+id/ll_view_details" 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:background="@color/white"
    	android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">
    
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">
        
        <TextView
            android:id="@+id/tv_fund_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:text=" "/>
        
        <TextView
            android:id="@+id/tv_fund_code"
            android:layout_toRightOf="@+id/tv_fund_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:text=" "/>
        
        <ImageView
            android:layout_toLeftOf="@+id/img"
            android:id="@+id/iv_balance"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="12dp"
            android:visibility="gone"
            android:src="@drawable/balance_blue"/>
        
        
        <ImageView
            android:id="@+id/img"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/img_right_arrow2"/>
        
        
    </RelativeLayout>
    
    
    <View 
        style="@style/viewLine"/>
    
    
    <LinearLayout
        android:id="@+id/ll_real_exist_item"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp">
        
        
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="10sp"
            android:text="份额:"/>
        
        <TextView
            android:id="@+id/tv_fund_share"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="10sp"
            android:text=" "/>
        
        <TextView
            android:id="@+id/fund_prop_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="10sp"
            android:layout_marginLeft="20dp"
            android:text="净值:"/>
        
        <TextView
            android:id="@+id/tv_fund_pure_value"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:textColor="#000000"
            android:text=" "/>
        
    </LinearLayout>
    
    
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal">
        
        <RelativeLayout 
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">
            
            <TextView
                android:id="@+id/tv_total_value" 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text=""/>
			
            <TextView 
                android:layout_below="@+id/tv_total_value"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#99000000"
           		 android:textSize="11sp"
                android:text="总市值(元)"/>
            
            <TextView 
                style="@style/viewVertical"
                android:layout_alignParentRight="true"
                android:layout_height="35dp"/>
            
            
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1">
            
            <TextView
                android:id="@+id/tv_total_profit_lose" 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
            	android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text=""/>
			
            <TextView 
                android:layout_below="@+id/tv_total_profit_lose"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
            	android:layout_marginLeft="20dp"
                android:textColor="#99000000"
            	android:textSize="11sp"
                android:text="累计盈亏(元)"/>
            
        </RelativeLayout>
        
    </LinearLayout>

    </LinearLayout>
    
    </LinearLayout>
    
</LinearLayout>

</RelativeLayout>